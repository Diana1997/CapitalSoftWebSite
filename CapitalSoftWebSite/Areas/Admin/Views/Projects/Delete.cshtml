@model CapitalSoftWebSite.Models.Project

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Project</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LargeDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LargeDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lang)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lang)
        </dd>
        <dt>Techologies</dt>
        <dd>
            <ul>
                @foreach (var elem in Model.Technologies)
                {
                    <li>@elem.Name</li>
                }
            </ul>
        </dd>
        <dt>Images</dt>
        <dd>
            <div class="col-md-10">
                @foreach (var elem in Model.Images)
                {
                    <img src="@Url.Action("GetImage", "Projects", new { elem.ImageID })" class="img-thumbnail img-size" />
                }
            </div>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

