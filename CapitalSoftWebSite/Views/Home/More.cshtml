@model CapitalSoftWebSite.Models.Project

<div class="modal" id="@Model.ProjectID">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Html.DisplayFor(model => model.Name)</h4>
            </div>
            <div class="modal-body">
                <p>@Html.DisplayFor(model => model.Description)</p>
                <div class="slideshow-container">
                    @foreach (var item in Model.Images)
                    {
                        <div class="mySlides">
                            <img src="@Url.Action("GetImage", "Home", new { item.ImageID })" alt="" style="width:100%" />
                        </div>
                    }
                    <a class="prev" @*onclick="plusSlides(-1)"*@ id="prev">&#10094;</a>
                    <a class="next" @*onclick="plusSlides(1)"*@ id="next">&#10095;</a>
                </div>                                     
                <br>
                <div style="text-align:center">
                    @{
                        int count = Model.Images.Count;
                        int j = 0;
                        if (count > 0)
                        {
                            do
                            {

                                <span class="dot" onclick="currentSlide(@j+1)" id="dot"></span>
                                ++j;
                            } while (j < count);
                        }
                    }
                    @*<span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
        </div>
</div>

<link rel="stylesheet" href="~/Content/slide.css" type="text/css"/>
<script src="~/Scripts/slide.js"></script>