    <section id="portfolio">
        <div>
            @if (Model.Projects != null)
            {
                <h2>@Resources.Resource.Portfolio</h2>
                foreach (var item in Model.Projects)
                {
                    <p>@item.Name</p>
                    <p>@item.Description</p>
                    foreach (var elem in item.Images)
                    {
                        <div>
                            <img src="@Url.Action("GetImage", "Home", new { elem.ImageID })" width="300" height="300" />
                        </div>
                    }
                    <ul>
                        @if (Model.TeamMembers != null)
                        {
                            foreach (var elem in item.Technologies)
                            {
                                <li>@elem.Name</li>
                            }
                        }
                    </ul>
                }
            }
        </div>
    </section>
    <section id="team">
        @if (Model.TeamMembers != null)
        {
            <h2>@Resources.Resource.Team</h2>
            foreach (var item in Model.TeamMembers)
            {
                <p>@item.Firstname</p>
                <span>@item.Lastname</span>
                <p>@item.Position</p>
                if (item.Image != null)
                {
                    <div>
                        <img src="@Url.Action("GetImage", "Home", new { item.ImageId})" width="300" height="300" />
                    </div>
                }
                <hr />
            }
        }
    </section>

    <section id="contact">
        <h3>@Resources.Resource.Contact_Us</h3>
        @if (ViewBag.SendMessage != null)
        {
            <p>@ViewBag.SendMessage</p>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Contact.Name, new { htmlAttributes = new { placeholder = Resources.Resource.Name } })
                        @Html.ValidationMessageFor(model => model.Contact.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Contact.Phone, new { htmlAttributes = new { placeholder = Resources.Resource.Phone } })
                        @Html.ValidationMessageFor(model => model.Contact.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Contact.Email, new { htmlAttributes = new { placeholder = Resources.Resource.Email } })
                        @Html.ValidationMessageFor(model => model.Contact.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Contact.Message, new { placeholder = Resources.Resource.Message })
                        @Html.ValidationMessageFor(model => model.Contact.Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input value="@Resources.Resource.Send" type="submit" class="btn-success" />
                    </div>
                </div>
            </div>
        }

    </section>

    <section id="stagesOfWork">
        <div>
            <i class="fa fa-comments" aria-hidden="true"></i>
        </div>
    </section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
